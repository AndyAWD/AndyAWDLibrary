<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hexColor033_LightSteelBlue"
    tools:context=".ui.activity.SquareImageActivity">

    <TextView
        android:id="@+id/tvAsi_HeightSquareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tvAsi_HeightSquareText_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/aivAsi_HeightSquareImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <tw.com.andyawd.andyawdlibrary.AWDSquareImageView
        android:id="@+id/aivAsi_HeightSquareImage"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@color/hexColor042_CornflowerBlue"
        app:layout_constraintBottom_toTopOf="@+id/tvAsi_WidthSquareText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAsi_HeightSquareText"
        app:lockLayoutSide="height" />

    <TextView
        android:id="@+id/tvAsi_WidthSquareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tvAsi_WidthSquareText_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/aivAsi_WidthSquareImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aivAsi_HeightSquareImage" />

    <tw.com.andyawd.andyawdlibrary.AWDSquareImageView
        android:id="@+id/aivAsi_WidthSquareImage"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:src="@color/hexColor035_RoyalBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAsi_WidthSquareText"
        app:lockLayoutSide="width" />

</androidx.constraintlayout.widget.ConstraintLayout>