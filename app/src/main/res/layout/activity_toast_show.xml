<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBase_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseTextColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseTextColor_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseTextColorBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseTextColorBackground_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseTextColorDrawableBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseTextColorDrawableBackground_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseTextColorDrawableBackgroundTextSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseTextColorDrawableBackgroundTextSize_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseGravity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseGravity_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseTextGravity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseTextGravity_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastBaseBackgroundTextBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastBaseBackgroundTextBackground_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastPicture_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAts_ToastLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ToastShowListButton"
            android:text="@string/ToastLayout_text" />
    </LinearLayout>
</ScrollView>
