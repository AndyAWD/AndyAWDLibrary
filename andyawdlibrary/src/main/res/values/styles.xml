<resources>
    <style name="popupWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_window_in</item>
        <item name="android:windowExitAnimation">@anim/popup_window_out</item>
    </style>

    <style name="dialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框為無-->
        <item name="android:windowIsFloating">false</item><!--是否浮現在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--提示框是透明的 -->
        <item name="android:windowNoTitle">true</item><!--提示框是否有標題-->
        <item name="android:windowBackground">@android:color/transparent</item><!--提示框的背景顏色-->
        <item name="android:windowCloseOnTouchOutside">true</item><!--點擊外部是否關閉-->
        <item name="android:backgroundDimEnabled">true</item><!--畫面以外的地方灰底-->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
